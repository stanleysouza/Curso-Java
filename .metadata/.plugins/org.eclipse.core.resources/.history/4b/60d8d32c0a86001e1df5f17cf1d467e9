package classe;

public class Data {
	
	int dia, mes, ano;
	
	Data(){
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	Data(int vDia, int vMes, int vAno){
		dia = vDia;
		mes = vMes;
		ano = vAno;
	}
	
	String obterDataFormatada() {
		return String.format("%02d", dia) + "/" + String.format("%02d", mes) + "/" + ano;
	}
}
