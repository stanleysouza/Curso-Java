package classe;

public class Data {
	
	int dia, mes, ano;
	
	Data(){
		this(1, 1, 1970)
	}
	Data(int dia, int mes, int ano){
		this.dia = dia;
		this.mes = mes;
		this.ano = ano;
	}
	
	String obterDataFormatada() {
		return String.format("%02d", dia) + "/" + String.format("%02d", mes) + "/" + ano;
	}
}
